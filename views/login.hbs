<style>
    #signInBody{
        background-image: url(/images/SignUI-4.jpg);
        background-size: cover;
    }

    #signInJumbo{
        margin-top: 99px;
        margin-bottom: 15px;
        padding-top: 20px;
        padding-bottom: 20px;
        opacity: 0.95;
    }

    .form-group{
        margin-bottom: 18px !important;
    }

    header{
        display: none !important;
    }

    #newHeader{
        height: 41px;
    }

    #userDNExists{
        float: right;
        margin-top: 7px;
    }

    #forgotpw{
        text-align: center;
        margin-bottom: 140px;
    }

    #userDNExists a,
    #forgotpw a{
        color: #f78e81;
    }

    #userDNExists a:hover,
    #forgotpw a:hover{
        color: #7596b0;
    }

    #loginToView{
        position: absolute;
        margin: auto;
        margin-left: 34%;
        margin-top: 5%;
    }
</style>

<div class="container" id="newHeader">
    <a href="/"><img src="/images/CreativeWorks.png" style="height: 50%; margin: 10px;"></a>
    <span id="userDNExists">Don't have an account? <a href="/signup">Sign Up</a></span>
</div>

<div class="container" id="signInBody">
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
            {{#if notLogged}} 
            <div class="alert alert-primary" id="loginToView" role="alert">
                Please login to view that page.
            </div>
        {{/if}}
    <div class="jumbotron" id="signInJumbo">
    <div class="container" style="text-align: center;">
        <img src="/images/icon.png" style="height: 75px;"><h2>Login</h2>
        {{#if error}}<span style="color: red">Invalid username and/or password. Please try again.</span>{{/if}}
    </div>
    <form method="POST" action="">
        <div class="form-group row">
		<label>Username:</label> 
        <input class="form-control" placeholder="Username" name="username" required>
        </div>
        <div class="form-group row">
		<label>Password:</label> 
        <input type="password" class="form-control" placeholder="Password" name="password" required>
        </div>
		<input type="submit"><br>
    </form>
    </div>
    </div>
    <div class="col-2"></div>
    </div>
    <div class="row">
        <div class="col-2"></div>
        <div class="col-8" id="forgotpw"><a href="/">Forgot Password?</a></div>
        <div class="col-2"></div>
    </div>
</div>
<div style="height: 80px;"></div>